<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".napTien.NapTien">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập số tiền muốn nạp"
            android:layout_marginHorizontal="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="Nạp 100k thì được 100k \nXử lý nạp trong vòng 1-5p\nCó lỗi liên hệ sdt: 0964098593"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            app:backgroundTint="@null"
            android:layout_marginTop="20dp"
            android:text="Thanh toán qua MoMo"
            android:background="@drawable/btn_momo"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>