<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upTruyen.UpTruyen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/left" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/playfair_display"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Danh sách chương"
                android:textColor="#FFC400"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>


        <EditText
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:background="@drawable/boc_goc"
            android:id="@+id/etTenTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên truyện"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:background="@drawable/boc_goc"
            android:id="@+id/etTenTacGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên tác giả"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:layout_marginHorizontal="20dp"

            android:id="@+id/spinnerTheLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:padding="10dp"
            android:background="@drawable/boc_goc"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/etMoTaTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả truyện"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine"
            android:lines="4"/>

        <Button
            android:id="@+id/btnChonHinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn hình ảnh"
            android:layout_gravity="center"

            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_gravity="center"

            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnDangTruyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Truyện"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
